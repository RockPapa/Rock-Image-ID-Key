<script>
  function playClick() {
    const click = new Audio("click.mp3");
    click.play();
  }

  function goDonate() {
    playClick();
    // Opens PayPal donate page in a new tab
    window.open("https://www.paypal.com/donate/?business=VS2PXXL5H5UEA&amount=5&no_recurring=1&item_name=By+donating+%245.00%2C+you+help+support+this+project%2C+and+get+the+complete+Rock+Image+ID+App+for+use+offline%2C+anywhere.+Thank+you%21&currency_code=USD", "_blank");
  }

  function goWeb() {
    playClick();
    // Opens the free web version
    window.location.href = "FourChoices.html";
  }
</script>
